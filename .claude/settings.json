{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python scripts/guardrails/validate_edit.py"
          },
          {
            "type": "command",
            "command": "python scripts/guardrails/validate_secrets.py"
          },
          {
            "type": "command",
            "command": "python scripts/guardrails/validate_quality.py"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python scripts/guardrails/validate_edit.py"
          },
          {
            "type": "command",
            "command": "python scripts/guardrails/validate_secrets.py"
          },
          {
            "type": "command",
            "command": "python scripts/guardrails/validate_quality.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python scripts/guardrails/validate_command.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python scripts/guardrails/post_write.py"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python scripts/guardrails/post_write.py"
          }
        ]
      }
    ]
  }
}
